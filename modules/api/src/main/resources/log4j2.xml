<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <EcsLayout
                    serviceName="vinyldns-api"
                    serviceNodeName="vinyldns-api"
                    eventDataset="vinyldns-api"
                    includeOrigin="true"
            />
        </Console>
    </Appenders>
    <Loggers>
        <logger name="com.zaxxer.hikari" level="ERROR">
            <AppenderRef ref="Console" />
        </logger>

        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>







